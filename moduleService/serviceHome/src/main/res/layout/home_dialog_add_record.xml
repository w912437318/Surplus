<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding_right">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:text="@string/add_record"
        android:textSize="@dimen/content_big_title_size" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_add_edt_money"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:padding="@dimen/default_padding">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/money"
            android:inputType="numberDecimal|number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/dialog_add_sp_type"
        android:layout_width="250dp"
        android:layout_height="@dimen/default_height"
        android:layout_marginTop="@dimen/default_margin"
        android:entries="@array/consumed_record_type"
        android:minHeight="@dimen/default_height"
        android:padding="@dimen/default_padding" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_add_edt_memo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:padding="@dimen/default_padding">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/memo"
            android:inputType="text"
            android:lines="2"
            android:maxLength="30" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="@dimen/default_margin"
        android:id="@+id/dialog_add_btn_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note" />

</LinearLayout>